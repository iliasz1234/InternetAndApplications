<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

    <display-name>Web Computer Store</display-name>
    <description>
	This is a simple web application with a web computer store.
    </description>

    <welcome-file-list>
      <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Login</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Register</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>Home</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>Update</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProcessProductServlet</servlet-name>
        <servlet-class>ProcessProduct</servlet-class>
    </servlet>
	    
    <servlet>
        <servlet-name>BasketServlet</servlet-name>
        <servlet-class>Basket</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ProcessVoucherServlet</servlet-name>
        <servlet-class>ProcessVoucher</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProcessCountryServlet</servlet-name>
        <servlet-class>ProcessCountry</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProcessOrderServlet</servlet-name>
        <servlet-class>ProcessOrder</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProcessProductServlet</servlet-name>
        <url-pattern>/processproduct</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>BasketServlet</servlet-name>
        <url-pattern>/basket</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProcessVoucherServlet</servlet-name>
        <url-pattern>/processvoucher</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProcessCountryServlet</servlet-name>
        <url-pattern>/processcountry</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProcessOrderServlet</servlet-name>
        <url-pattern>/processorder</url-pattern>
    </servlet-mapping>
</web-app>
